// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id         Int       @id @default(autoincrement())
  username   String
  email      String
  password   String
  lastLogin DateTime?
  createdAt DateTime?
  updatedAt DateTime?
  attendance Attendance[]
}
model Attendance {
  id            Int @id @default(autoincrement())
  date          DateTime?
  presentStatus Boolean?
  user          User @relation(fields: [userId],references:[id])
  userId        Int
}
model Admin {
  id            Int @id @default(autoincrement())
  email         String
  password      String
}
